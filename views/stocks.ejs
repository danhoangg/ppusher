<!DOCTYPE html>

<head>
    <title>PPusher</title>

    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css' rel='stylesheet'>
    <link rel="icon" type="image/x-icon" href="/Resources/favicon.jpeg">
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>

    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/master.css">
    <link rel="stylesheet" href="/css/stocks.css">
</head>

<body classname="snippet-body" id="body-pd">
    <header class="header bg-grey" id="header">
        <div class="header_toggle d-flex"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <input id="searchbar" type="text" class="" placeholder="Search">
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div> <a href="#" class="nav_logo"> <span class="nav_logo-name">
                        <h2>PPusher</h2>
                        <br>
                        <h4>
                            <%= locals.username %>
                        </h4>
                    </span> </a>
                <div class="nav_list"> <a href="/home" class="nav_link active"> <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Dashboard</span> </a> <a href="/home/orders" class="nav_link"> <i
                            class='bx bx-candles nav_icon'></i>
                        <span class="nav_name">Orders</span> </a> <a href="#" class="nav_link"> <i
                            class='bx bx-history nav_icon'></i> <span class="nav_name">History</span> </a> <a href="#"
                        class="nav_link">
                </div>
            </div>
            <a href="#" class="nav_link" id=""> <i class='bx bx-cog settings_icon'></i> <span
                    class="nav_name">Settings</span>
            </a>
            <a href="/account/login" class="nav_link" id=""> <i class='bx bx-log-out nav_icon'></i> <span
                    class="nav_name">Sign Out</span>
            </a>
        </nav>
    </div>

    <!-- CONTAINER MAIN START -->

    <div id="orderbuyinput" class="position-absolute bg-primary text-light px-2 pt-3 pb-0 rounded d-none" style="top: 1%; left: 37%;">
        <div class="d-flex">
            <div class="d-inline px-2">
                <h5 class="d-block">Invested:</h5>
                <input id="binvested" type="number" name="Invested" value="" class="d-block">
            </div>
            <div class="d-inline px-2">
                <h5 class="d-block">Leverage:</h5>
                <input id="bleverage" type="number" name="Leverage" value="1" class="d-block">
            </div>
            <div class="d-inline px-2">
                <h5 class="d-block">Stop-Loss:</h5>
                <input id="bstoploss" type="number" name="Stop Loss" value="" class="d-block">
            </div>
            <div class="d-inline px-2">
                <h5 class="d-block">Take-Profit:</h5>
                <input id="btakeprofit" type="number" name="Take Profit" value="" class="d-block">
            </div>
            <div class="d-inline px-2">
                <br>
                <button id="placebuyorder" type="button" name="submit" class="btn btn-light" onclick=<%= "placebuyorder('" + locals.ticker + "')" %>>Place Buy Order</button>
            </div>
        </div>
        <p class="pt-2" style="font-size: 20px;" id="error"></p>
        
    </div>

    <div id="ordersellinput" class="position-absolute bg-primary text-light px-2 pt-3 pb-0 rounded d-none" style="top: 1%; left: 37%;">
        <div class="d-flex">
            <div class="d-inline px-2">
                <h5 class="d-block">Invested:</h5>
                <input id="sinvested" type="number" name="Invested" value="" class="d-block">
            </div>
            <div class="d-inline px-2">
                <h5 class="d-block">Leverage:</h5>
                <input id="sleverage" type="number" name="Leverage" value="1" class="d-block">
            </div>
            <div class="d-inline px-2">
                <h5 class="d-block">Stop-Loss:</h5>
                <input id="sstoploss" type="number" name="Stop Loss" value="" class="d-block">
            </div>
            <div class="d-inline px-2">
                <h5 class="d-block">Take-Profit:</h5>
                <input id="stakeprofit" type="number" name="Take Profit" value="" class="d-block">
            </div>
            <div class="d-inline px-2">
                <br>
                <button id="placesellorder" type="button" name="submit" class="btn btn-light" onclick=<%= "placesellorder('" + locals.ticker + "')" %>>Place Sell Order</button>
            </div>
        </div>
        <p class="pt-2" style="font-size: 20px;" id="error2"></p>
        
    </div>

    <div id="topcol" class="d-flex justify-content-between align-middle mx-2 py-3 mb-5 pt-3 pb-0 border-bottom border-secondary">
        <div class="d-flex">
            <div class="d-inline">
                <img alt="stock symbol" style="max-width: 55%;" src= <%= 'https://logo.clearbit.com/' + locals.image + ".com" %> >
            </div>
            <div class="d-inline py-1">
                <div class="d-block">
                    <h3 class="d-inline"> <%= locals.ticker.toUpperCase() || "TICKER" %> </h3>
                    <h3 class="d-inline" style="position: absolute; top:18px;"> | </h3>
                    <p class="d-inline">&nbsp;&nbsp;&nbsp; <%= locals.displayName || "DISPLAYNAME" %> </p>
                </div>
                <div class="d-block py-1">
                    <h5 id="price" class="d-inline"><%= locals.price || "PRICE" %></h5>
                    <p id="change" class="d-inline <%= locals.change >= 0 ? 'text-success' : 'text-danger' %>">&nbsp;&nbsp;&nbsp;&nbsp; <%= locals.change.toFixed(2) + "(" + locals.changePercent.toFixed(2) + "%)" %> </p>
                </div>
            </div>
        </div>

        <div class="d-block pt-4 px-5">
            <div class="d-flex">
                <div class="d-inline">
                    <button class="d-block btn btn-success btn-lg mx-2" onclick= "buy()" >BUY</button>
                    <p class="text-success d-block text-center"> <%= locals.bid %> </p>
                </div>
                <div class="d-inline">
                    <button class="d-block btn btn-danger btn-lg mx-2" onclick= "sell()" >SELL</button>
                    <p class="text-danger d-block text-center"> <%= locals.ask %> </p>
                </div>
            </div>
        </div>
    </div>


    <!-- TradingView Widget BEGIN -->
    <div class="tradingview-widget-container">
        <div id="tradingview_987a7"></div>
        <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com/symbols/NASDAQ-GOOGL/" rel="noopener"
                target="_blank"></div>
        <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
        <script type="text/javascript">
            var ticker = '<%- locals.ticker %>'

            new TradingView.widget(
                {
                    "width": "100%",
                    "height": "700px",
                    "symbol": ticker,
                    "interval": "D",
                    "timezone": "Etc/UTC",
                    "theme": "light",
                    "style": "1",
                    "locale": "en",
                    "toolbar_bg": "#f1f3f6",
                    "enable_publishing": false,
                    "hide_side_toolbar": false,
                    "allow_symbol_change": true,
                    "container_id": "tradingview_987a7"
                }
            );
        </script>
    </div>
    <!-- TradingView Widget END -->



    <script type='text/javascript'
        src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js'></script>
    <script src="/js/sidebar.js"></script>
    <script src="/js/stocks.js"></script>

    <script type="text/javascript">
        var myLink = document.querySelector('a[href="#"]');
        myLink.addEventListener('click', function (e) {
            e.preventDefault();
        });
    </script>
</body>